extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
  .row 
    .col-12 
      p.rating 
        +outputRating(book.rating)
          
  .row
    .col-12.col-md-8
        .card
          .card-block
            h2.card-title Overview 
            p.card-text= book.overview
            
  .row
    .col-12.col-md-8
        .card.card-primary.review-card
          .card-block
            a.btn.btn-primary.float-left(href=`/book/${book._id}/review/new`) Add review
            h2.card-title Customer Reviews 
            each review in book.reviews
              .row.review 
                .col-12.no-gutters.review-header
                  span.rating 
                  span.reviewAuthor #{review.author}
                  small.reviewTimestamp
                    +formatDate(review.createdOn)
                .col-12 
                  p.card-text= review.reviewText
             
              
 
    